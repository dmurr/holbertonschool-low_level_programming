#include "holberton.h"

/**
 * print_sign - checks sign of number
 * @n: number being checked
 *
 * Return: 1 if pos, -1 if neg, 0 if 0
 */
int print_sign(int n)
{
	if (n > 0)
	{
		_putchar('+');
		return (1);
	}
	else if (n < 0)
	{
		_putchar('-');
		return (0);
	}
	else
	{
		_putchar('0');
		return (-1);
	}
}
